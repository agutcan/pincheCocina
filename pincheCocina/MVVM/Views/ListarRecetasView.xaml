<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pincheCocina.MVVM.Views.ListarRecetasView"
             Title="Mis Recetas (Modo Demo)">

    <CollectionView ItemsSource="{Binding Recetas}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="10" Padding="15" CornerRadius="10" BorderColor="LightGray">
                    <VerticalStackLayout>
                        <Label Text="{Binding Nombre}" 
                               FontSize="20" 
                               FontAttributes="Bold" 
                               TextColor="MediumPurple" />

                        <Label Text="{Binding Pasos.Count, StringFormat='{0} pasos en esta receta'}" 
                               FontSize="14"
                               TextColor="Gray" />
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>